{% extends '@bestopheVideoCollection/layout.html.twig' %}

{% block title %}{{ 'importListMovie.import'|trans([], 'menu') }}{% endblock %}

{% block content %}

    <div class="panel panel-default">

        <div class="panel-heading">
            <h3 class="panel-title">{{ 'importListMovie.title'|trans([], 'menu') }}</h3>
        </div>
        <div class="panel-body">
            <br/>
            <p>{{ 'importListMovie.stepsToFollow'|trans([], 'menu') }} : </p>
            <p>1- {{ 'importListMovie.step1'|trans([], 'menu') }}</p>
            <p>2- {{ 'importListMovie.step2'|trans([], 'menu') }}</p>
            <br/>
            <p>{{ 'importListMovie.letsGo'|trans([], 'menu') }}</p>

        </div>
        <div class="panel-body">
            <form action="#" method="post" {{ form_enctype(ImportFileForm) }}>  
                <div class="form-group">
                    {{ form_row(ImportFileForm.file, {'label': 'importListMovie.file'|trans([], 'menu')}) }}
                    {#{{ form_errors(ImportListMovieForm) }}                  
                    {{ form_widget(ImportListMovieForm.file, {'label': 'importListMovie.file'|trans([], 'menu')}) }}#}
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="{{ 'importListMovie.submit'|trans([], 'menu') }}" />
                </div>
                {{ form_end(ImportFileForm) }}
        </div>
    </div>

{% endblock %}
